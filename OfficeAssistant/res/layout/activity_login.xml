<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7" >

    <EditText 
        android:id="@+id/et_login_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="邮箱"/>
    
    <EditText 
        android:id="@+id/et_login_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     	android:layout_below="@id/et_login_account"
        android:inputType="textPassword"
        
        android:hint="密码"/>

    <CheckBox
        android:id="@+id/cb_login_remberPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_login_pw"
        android:checked="true"
        android:text="记住密码" />
    
    <Button
        android:id="@+id/b_login_login"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="@drawable/corner" 
        android:textColor="#fff8f8ff" 
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cb_login_remberPw"
        android:text="登陆" />
    
    <TextView 
        android:id="@+id/tv_login_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:clickable="true"
        android:textColor="#0099FF"
        android:text="注册"/>
    
     <TextView 
        android:id="@+id/tv_login_resetPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_login_pw"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:clickable="true"
        android:textColor="#0099FF"
        android:textSize="16sp"
        android:text="更改密码"/>
   
    <TextView 
        android:id="@+id/tv_login_forgetPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:clickable="true"
        android:textColor="#0099FF"
        android:text="忘记密码"/>


</RelativeLayout>
