<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ebecf0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#00BFFF"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="#00BFFF"
            android:gravity="center_vertical"
            android:text="编辑会议室信息"
            android:textColor="#fff8f8ff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/b_meetingroom_confirm"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/confirm" />

    </LinearLayout>
     
    <EditText
        android:id="@+id/et_meetingroom_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:singleLine="true"
        android:paddingLeft="6dp"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:maxLength="9"
        android:hint="会议室名字"/>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ebecf0"/>
    
     <EditText
        android:id="@+id/et_meetingroom_location"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:singleLine="true"
        android:paddingLeft="6dp"
        android:background="#ffffff"
        android:maxLength="15"
        android:hint="位置"/>
    
     <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ebecf0"/>
     
     <EditText
        android:id="@+id/et_meetingroom_floor"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:singleLine="true"
        android:paddingLeft="6dp"
        android:background="#ffffff"
        android:maxLength="7"
        android:hint="楼层"/>
     
     <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ebecf0"/>
     
     <EditText
        android:id="@+id/et_meetingroom_accommodate"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:singleLine="true"
        android:inputType="number"
        android:paddingLeft="6dp"
        android:background="#ffffff"
        android:maxLength="3"
        android:hint="容纳人数"/>
     
     <CheckBox 
         android:id="@+id/cb_meetingroom_wifi"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="支持WIFI"/>
     
     <CheckBox 
         android:id="@+id/cb_meetingroom_projector"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="支持投影"/>
    
     <EditText
        android:id="@+id/et_meetingroom_othersSupport"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="top"
        android:paddingLeft="6dp"
        android:background="#ffffff"
        android:hint="其他支持"/>
     
    
    

</LinearLayout>
